{
	"private": true,
	"name": "@dao-xyz/peerbit",
	"author": "dao.xyz",
	"repository": {
		"type": "git",
		"url": "https://github.com/dao-xyz/peerbit"
	},
	"license": "Apache-2.0",
	"type": "module",
	"workspaces": {
		"packages": [
			"packages/libp2p/direct-block",
			"packages/libp2p/direct-stream",
			"packages/libp2p/direct-sub",
			"packages/libp2p/libp2p-test-utils",
			"packages/libp2p/peerbit-libp2p",
			"packages/log",
			"packages/client",
			"packages/server-node/frontend",
			"packages/server-node/node",
			"packages/server-node/test-lib",
			"packages/programs/rpc",
			"packages/programs/acl/identity-access-controller",
			"packages/programs/acl/trusted-network",
			"packages/programs/program-interface",
			"packages/programs/clock-service",
			"packages/utils/keystore",
			"packages/utils/crypto",
			"packages/programs/data/document",
			"packages/programs/data/string",
			"packages/utils/test-utils",
			"packages/utils/lazy-level",
			"packages/utils/uint8arrays",
			"packages/utils/time",
			"packages/utils/cache",
			"packages/utils/logger"
		],
		"nohoist": [
			"**/@babel/preset-env",
			"**/@babel/preset-env/**",
			"**/babel-loader",
			"**/babel-loader/**",
			"**/webpack",
			"**/webpack/**"
		]
	},
	"engines": {
		"node": ">=16.15.1"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"clean": "lerna run clean",
		"build": "lerna run build --reject-cycles",
		"build-node": "cd ./packages/node/ && yarn build",
		"pub": "lerna publish --no-private",
		"test": "node --experimental-vm-modules ./node_modules/.bin/jest test -c jest.config.unit.ts ",
		"test:integration": "node --experimental-vm-modules ./node_modules/.bin/jest test -c jest.config.integration.ts --forceExit  --detectOpenHandles",
		"deploy": "yarn deploy:docs && yarn deploy:example",
		"deploy:docs": "yarn docs && gh-pages --dist docs --dotfiles",
		"docs": "shx rm -rf docs && NODE_OPTIONS=--max_old_space_size=8192 typedoc && shx cp ./{.nojekyll} docs/",
		"fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json,vue}'",
		"lint": "eslint --ext .ts . && prettier --check '{*,**/*}.{js,ts,jsx,tsx,json,vue}'",
		"lint:fix": "eslint --fix --ext .ts . && yarn fmt",
		"nuke": "shx rm -rf {.,packages/*/*}/{node_modules,yarn.lock}"
	},
	"devDependencies": {
		"@qiwi/multi-semantic-release": "^6.7.0",
		"@semantic-release/github": "^9.0.2",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/npm": "^10.0.3",
		"@types/benchmark": "^2.1.2",
		"@types/eslint": "^8.37.0",
		"@types/eslint-plugin-prettier": "^3.1.0",
		"@types/fs-extra": "^11.0.1",
		"@types/jest": "^29.5.1",
		"@types/node": "^20.2.5",
		"@types/prettier": "^2.7.1",
		"@types/rimraf": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^5.59.5",
		"@typescript-eslint/parser": "^5.59.5",
		"benchmark": "^2.1.4",
		"dotenv": "^16.0.3",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"fs-extra": "^11.1.1",
		"gh-pages": "^5.0.0",
		"jest": "^29.5.0",
		"jest-extended": "^3.2.4",
		"json": "^11.0.0",
		"lerna": "^5.5.1",
		"prettier": "^2.8.1",
		"rimraf": "^3.0.2",
		"shx": "^0.3.4",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typedoc": "^0.24.8",
		"typescript": "^5.0.4",
		"why-is-node-running": "^2.2.2"
	},
	"version": "1.0.0"
}
