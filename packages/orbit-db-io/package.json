{
  "name": "@dao-xyz/orbit-db-io",
  "version": "1.0.3",
  "description": "IO helper module for orbit-db",
  "type": "module",
  "sideEffects": false,
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.mjs",
  "types": "lib/esm/index.d.ts",
  "exports": {
    "import": "./lib/esm/index.mjs",
    "require": "./lib/cjs/index.js"
  },
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "node ../../node_modules/.bin/jest test  -c  ../../jest.config.cjs --runInBand --forceExit",
    "test:unit": "node ../../node_modules/.bin/jest test  -c  ../../jest.config.unit.cjs --runInBand --forceExit",
    "test:integration": "node ../node_modules/.bin/jest test -c  ../jest.config.integration.cjs --runInBand --forceExit",
    "clean": "shx rm -rf lib/*",
    "build": "yarn clean && tsc -p tsconfig.json; tsc-esm -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "postbuild": "echo '{\"type\":\"commonjs\"}' | npx json > lib/cjs/package.json && echo '{\"type\":\"module\"} ' | npx json > lib/esm/package.json"
  },
  "engines": {
    "node": ">= 14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orbitdb/orbit-db-io.git"
  },
  "keywords": [
    "orbitdb",
    "orbit-db"
  ],
  "author": "shamb0t",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/orbitdb/orbit-db-io/issues"
  },
  "homepage": "https://github.com/orbitdb/orbit-db-io#readme",
  "localMaintainers": [
    "shamb0t <shams@haja.io>",
    "hajamark <mark@haja.io>"
  ],
  "devDependencies": {
    "eslint": "^7.31.0",
    "go-ipfs": "^0.10.0-rc1",
    "ipfs": "^0.62.3",
    "ipfsd-ctl": "^10.0.3",
    "mocha": "^9.1.1",
    "node-pre-gyp": "^0.17.0",
    "nyc": "^15.1.0",
    "orbit-db-test-utils": "^1.3.0",
    "standard": "^16.0.3"
  },
  "standard": {
    "env": "mocha"
  },
  "peerDependencies": {
    "go-ipfs": "*",
    "ipfs": "*",
    "ipfsd-ctl": "*"
  },
  "dependencies": {
    "@dao-xyz/borsh": "^2.1.3",
    "@ipld/dag-cbor": "^6.0.10",
    "@ipld/dag-pb": "^2.1.9",
    "multiformats": "^9.4.7"
  }
}