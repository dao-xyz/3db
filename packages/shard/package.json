{
    "name": "@dao-xyz/shard",
    "version": "0.0.80",
    "author": "dao-xyz.network",
    "repository": "https://github.com/@dao-xyz/dao-xyz-ts",
    "license": "Apache-2.0",
    "type": "module",
    "sideEffects": false,
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.mjs",
    "types": "lib/esm/index.d.ts",
    "exports": {
        "import": "./lib/esm/index.mjs",
        "require": "./lib/cjs/index.js"
    },
    "files": [
        "lib",
        "src",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "shx rm -rf lib/*",
        "build": "yarn clean && tsc -p tsconfig.json; tsc-esm -p tsconfig.json && tsc -p tsconfig.cjs.json",
        "postbuild": "echo '{\"type\":\"commonjs\"}' | npx json > lib/cjs/package.json && echo '{\"type\":\"module\"} ' | npx json > lib/esm/package.json",
        "test": "node ../../node_modules/.bin/jest test  -c  ../../jest.config.cjs --runInBand --forceExit",
        "test:unit": "node ../../node_modules/.bin/jest test  -c  ../../jest.config.unit.cjs --runInBand --forceExit",
        "test:integration": "node ../node_modules/.bin/jest test -c  ../jest.config.integration.cjs --runInBand --forceExit"
    },
    "jest": {
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "globals": {
            "ts-jest": {
                "useESM": true,
                "tsconfig": {
                    "allowJs": true
                }
            }
        },
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        }
    },
    "devDependencies": {
        "@dao-xyz-types/orbit-db": "^0.0.14",
        "@types/bs58": "^4.0.1",
        "@types/ipfs": "https://github.com/lukas2005/types-ipfs.git",
        "@types/mz": "^2.7.4",
        "dotenv": "^15.0.0",
        "ipfs": "^0.63.3",
        "ipfs-core-types": "^0.10.3",
        "mz": "^2.7.0",
        "yaml": "^1.10.2"
    },
    "dependencies": {
        "@dao-xyz/borsh": "^2.1.3",
        "@dao-xyz/orbit-db-bdocstore": "^0.0.39",
        "@dao-xyz/orbit-db-bfeedstore": "^0.0.23",
        "@dao-xyz/orbit-db-bkvstore": "^0.0.31",
        "@dao-xyz/orbit-db-pubsub": "^0.6.3",
        "@solana/web3.js": "^1.41.3",
        "bn.js": "^5.2.0",
        "bs58": "^4.0.1",
        "buffer": "^6.0.3",
        "crypto-browserify": "^3.12.0",
        "orbit-db": "^0.28.4",
        "orbit-db-access-controllers": "^0.3.2",
        "orbit-db-docstore": "^1.12.0",
        "orbit-db-identity-provider": "^0.4.0",
        "orbit-db-io": "^1.0.2",
        "reflect-metadata": "^0.1.13",
        "tweetnacl": "^1.0.3"
    }
}