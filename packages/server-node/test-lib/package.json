{
	"name": "@dao-xyz/peerbit-node-test-lib",
	"version": "0.0.1",
	"author": "dao.xyz",
	"repository": {
		"type": "git",
		"url": "https://github.com/dao-xyz/peerbit"
	},
	"license": "Apache-2.0",
	"type": "module",
	"private": true,
	"sideEffects": false,
	"module": "lib/esm/index.js",
	"types": "lib/esm/index.d.ts",
	"exports": {
		"import": "./lib/esm/index.js"
	},
	"files": [
		"lib",
		"src",
		"src/nginx-template.conf",
		"!src/**/__tests__",
		"!lib/**/__tests__",
		"LICENSE"
	],
	"engines": {
		"node": ">=16.15.1"
	},
	"scripts": {
		"clean": "shx rm -rf lib/*",
		"build": "yarn clean && tsc -p tsconfig.json; tsc -p tsconfig.json",
		"postbuild": "echo '{\"type\":\"module\"} ' | node ../../../node_modules/.bin/json > lib/esm/package.json",
		"test": "node ../../../node_modules/.bin/jest test  -c  ../../../jest.config.ts --runInBand --forceExit",
		"test:unit": "node ../../../node_modules/.bin/jest test  -c  ../../../jest.config.unit.ts --runInBand --forceExit",
		"test:integration": "node ../node_modules/.bin/jest test -c  ../../../jest.config.integration.ts --runInBand --forceExit"
	},
	"devDependencies": {
		"@dao-xyz/peerbit-test-utils": "*",
		"libp2p": "^0.45.9"
	},
	"dependencies": {
		"@dao-xyz/peerbit-string": "*",
		"@dao-xyz/peerbit-trusted-network": "*",
		"@dao-xyz/peerbit": "*"
	}
}
