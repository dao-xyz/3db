{
	"name": "peerbit",
	"version": "4.0.11",
	"description": "Peerbit client",
	"author": "dao.xyz",
	"license": "MIT",
	"sideEffects": false,
	"type": "module",
	"types": "./dist/src/index.d.ts",
	"typesVersions": {
		"*": {
			"*": [
				"*",
				"dist/*",
				"dist/src/*",
				"dist/src/*/index"
			],
			"src/*": [
				"*",
				"dist/*",
				"dist/src/*",
				"dist/src/*/index"
			]
		}
	},
	"files": [
		"src",
		"dist",
		"!dist/e2e",
		"!dist/test",
		"!**/*.tsbuildinfo"
	],
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"import": "./dist/src/index.js"
		}
	},
	"eslintConfig": {
		"extends": "peerbit",
		"parserOptions": {
			"project": true,
			"sourceType": "module"
		},
		"ignorePatterns": [
			"!.aegir.js",
			"test/ts-use",
			"*.d.ts"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dao-xyz/peerbit"
	},
	"engines": {
		"node": ">=18"
	},
	"browser": {
		"./dist/src/transports.js": "./dist/src/transports.browser.js"
	},
	"dependencies": {
		"@dao-xyz/borsh": "^5.2.3",
		"@peerbit/any-store": "^2.1.0",
		"@peerbit/crypto": "2.3.0",
		"@peerbit/logger": "1.0.3",
		"@peerbit/program": "5.0.1",
		"@peerbit/pubsub": "^3.0.6",
		"@peerbit/blocks": "^2.1.0",
		"@peerbit/indexer-simple": "^1.0.0",
		"@peerbit/indexer-sqlite3": "^1.0.2",
		"datastore-level": "^10.1.5",
		"@dao-xyz/libp2p-noise": "^14.1.2",
		"@chainsafe/libp2p-yamux": "^6.0.2",
		"@libp2p/webrtc": "^4.1.1",
		"@libp2p/websockets": "^8.1.2",
		"@libp2p/identify": "^2.1.2",
		"@libp2p/circuit-relay-v2": "^1.1.2",
		"@libp2p/tcp": "^9.1.1",
		"level": "^8.0.0",
		"memory-level": "^1.0.0",
		"path-browserify": "^1.0.1"
	},
	"devDependencies": {
		"p-each-series": "^3.0.0",
		"p-map-series": "^3.0.0",
		"@types/path-browserify": "^1.0.2"
	},
	"scripts": {
		"clean": "aegir clean",
		"build": "aegir build --no-bundle",
		"test": "aegir test -t node",
		"lint": "aegir lint"
	},
	"localMaintainers": [
		"dao.xyz"
	],
	"keywords": [
		"crdt",
		"database",
		"distributed",
		"decentralised",
		"distributed",
		"ipfs",
		"p2p",
		"peer-to-peer"
	]
}
