{
	"name": "@peerbit/server",
	"version": "2.0.0",
	"author": "dao.xyz",
	"repository": {
		"type": "git",
		"url": "https://github.com/dao-xyz/peerbit"
	},
	"license": "Apache-2.0",
	"type": "module",
	"sideEffects": false,
	"bin": {
		"peerbit": "./lib/esm/bin.js"
	},
	"module": "lib/esm/index.js",
	"types": "lib/esm/index.d.ts",
	"exports": {
		"import": "./lib/esm/index.js"
	},
	"files": [
		"lib",
		"src",
		"src/nginx-template.conf",
		"!src/**/__tests__",
		"!lib/**/__tests__",
		"patches",
		"LICENSE"
	],
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=16.15.1"
	},
	"scripts": {
		"clean": "shx rm -rf lib/*",
		"build": "yarn clean && yarn build-lib && yarn build-ui",
		"build-lib": "tsc -p tsconfig.json",
		"build-ui": "cd ../frontend && yarn build && cd ../node",
		"postbuild": "cp src/nginx-template.conf lib/esm/ && echo '{\"type\":\"module\"} ' | node ../../../../node_modules/.bin/json > lib/esm/package.json && cp -r ../frontend/dist lib/ui",
		"test": "node ../../../node_modules/.bin/jest test  -c  ../../../jest.config.ts --runInBand --forceExit",
		"test:unit": "node ../../../node_modules/.bin/jest test  -c  ../../../jest.config.unit.ts --runInBand --forceExit",
		"test:integration": "node ../node_modules/.bin/jest test -c  ../../../jest.config.integration.ts --runInBand --forceExit"
	},
	"devDependencies": {
		"@peerbit/string": "1.0.5",
		"@peerbit/test-utils": "1.0.5",
		"@peerbit/test-lib": "^0.0.1",
		"@types/yargs": "^17.0.24",
		"aws-sdk": "^2.1259.0",
		"dotenv": "^16.1.4"
	},
	"dependencies": {
		"@aws-sdk/client-route-53": "^3.345.0",
		"@dao-xyz/libp2p-noise": "^12.0.1",
		"axios": "^1.4.0",
		"peerbit": "2.0.0",
		"yargs": "^17.7.2"
	}
}
